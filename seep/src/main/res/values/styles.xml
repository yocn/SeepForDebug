<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SeepDialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--        <item name="android:windowAnimationStyle">@style/BottomDialog.AnimationStyle</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/seepColorPrimary</item>
        <item name="colorPrimaryDark">@color/seepPrimaryDark</item>
        <item name="colorAccent">@color/seepAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ToolbarBase" parent="Widget.AppCompat.Toolbar" />

    <style name="seepToolBarStyle" parent="ToolbarBase">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:background">@color/seepColorPrimary</item>
    </style>

    <attr name="seepToolBarStyle" format="reference" />

</resources>
